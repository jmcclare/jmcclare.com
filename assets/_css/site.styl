body
  color #222
  background-color #ffffff
  background-image url('/_img/background-gradient.png')
  background-size 100%
  background-repeat repeat-y
  //color #c0c5d1
  //background #00030f

//h1, h2, h3, h4, h5, h6, strong
  //color #f8ce63

//a
  //color #cb9d3c

blockquote
  color #666

#top-bar, #bottom-bar
  color #eee
  a
    color #fff
    text-decoration none
    &:hover
      color #ddd

#top-bar nav, #body-main, #bottom-bar footer
    background-color #c02
    //box-shadow 5px 5px 5px grey
    box-shadow 0px 2px 10px grey

#body-main
  background white
  main
    header
      //padding-bottom .4em
      //border-bottom 1px solid #ddd
      h1
        padding-bottom 0
        border-bottom none
  h1, h2, h3, h4, h5, h6
    padding-bottom .4em
    border-bottom 1px solid #ddd


//
// Page Layout
//

.regular-width, #body-main, #top-bar nav, #bottom-bar footer
  center()
  padding-left: $jeet.gutter + '%'
  padding-right: $jeet.gutter + '%'

#top-bar
  padding-bottom 1em
  nav
    padding-bottom .25em

#body-main
  margin-top .5em
  main
    header
      margin 3em 0

#main-content, header
  width 100%

main
  column(2/3)
  // Uncomment these moves to switch the main and aside.
  //move(1/3)

#main-aside
  column(1/3)
  // Uncomment these moves to switch the main content and aside.
  //move(-2/3)
  margin-top 6em

#bottom-bar footer
  padding-top .25em
  padding-bottom .25em
  margin-top 1.5em


//
// Specific page styles
//


// Software Development

.software-content
  .project
    clearfix()
    //background #fff
    //padding 1em
    .feature-image, .details
      column(1/2)
    .details
      padding 1em 0



//
// Size Adaptations
//


// medium width layout
@media (max-width: screen-medium)
  .regular-width, .centred, main, aside
    max-width medium-width

  main, #main-aside
    stack()
    unmove()

  #main-aside
    margin-top 0


/* Small (mobile) display targeting */
/* Lower the font sizes for small displays */
@media only screen and (max-width: screen-small + round((screen-medium - screen-small) / 2))
  .regular-width, #top-bar nav, #bottom-bar footer
    padding-left 0
    padding-right 0


// mobile width layout
@media (max-width: screen-small)
  .priced-item
    stack()


